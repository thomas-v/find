{% extends 'base.html.twig' %}

{% block title %}Ajout d'une société{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
	
	<h1>
		{% if editMode %}
			Modifier la société
		{% else %}
			Ajouter une société
		{% endif %}
	</h1>

    {{ form_start(form) }}
    	{{ form_row(form.name, {label : 'Nom', attr : {'placeholder' : 'Nom'}}) }}
    	{{ form_row(form.address, {label : 'Adresse', attr : {'placeholder' : 'Adresse'}}) }}
    	{{ form_row(form.zip, {label : 'Code Postal', attr : {'placeholder' : 'Code Postal'}}) }}
    	{{ form_row(form.city, {label : 'Ville', attr : {'placeholder' : 'Ville'}}) }}
    	<button type="submit" class="btn btn-success">
    		{% if editMode %}
    			Modifier
    		{% else %}
    			Ajouter
    		{% endif %}
    	</button>
    {{ form_end(form) }}
{% endblock %}
