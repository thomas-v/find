{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
	<style>
		#connection_button{
    		text-decoration:none;
    	}
	</style>
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    {% if success_registration %}
    <br>
    	<div class="alert alert-dismissable alert-success"> 
             <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button> 
    
             <p>Inscription réalisée avec succès ! Vous pouvez désormais vous <a href="{{ path('security_login') }}">connecter</a> et accéder aux fonctionnalités de Find :)</p> 
    
             <p><a id='connection_button' class="btn btn-primary" role="button" href="{{ path('security_login') }}">Se connecter</a></p> 
    
       </div>
    {% endif %}

	<h1>Inscription</h1>
	
	{{ form_start(form) }}
	{{ form_row(form.username, {label : 'Nom d\'utilisateur', attr : {'placeholder' : 'Nom d\'utilisateur'}}) }}
	{{ form_row(form.email, {label : 'Email', attr : {'placeholder' : 'Email'}}) }}
	{{ form_row(form.password, {label : 'Mot de passe', attr : {'placeholder' : 'Mot de passe'}}) }}
	{{ form_row(form.confirm_password, {label : 'Confirmation du mot de passe', attr : {'placeholder' : 'Confirmation du mot de passe'}}) }}
	<button type="submit" class="btn btn-success">Valider</button>
	{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
	<script> 
          $('#myButton').click(function(){ /* Apr�s le clic sur l'�l�ment dont l'id est "myButton" (le bouton dans notre cas) "*/
                $('.alert').alert('close'); /* Faire disparaitre le bandeau d'alerte*/
          }); 
    </script> 
{% endblock %}
