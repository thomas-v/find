{% extends 'base.html.twig' %}

{% block title %}Description de l'entretien {% endblock %}


{% block body %}
	<h1>Description</h1>
	
	<br><br>
    
    <table class="table table-hover">
        <tbody>
            <tr>
              <th>Adresse</th>
                <td>{{ address.address }}</td>
            </tr>
            <tr>
              <th>Code postal</th>
                <td>{{ address.zip }}</td>
            </tr>
            <tr>
              <th>Ville</th>
              	<td>{{ address.city }}</td>
            </tr>
        </tbody>
    </table>
	
	<a class="btn btn-success" role="button" href="{{ path('address_edit', {'id' : address.id }) }}">Modifier cette adresse</a>
{% endblock %}

